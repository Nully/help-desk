<div class="row">
    <div class="col s6">
        <h5>No<%= @issue.id %>の詳細・回答</h5>
    </div>
    <div class="col s6">
        <p class="right">
            登録日:<%= @issue.created_at %> /
            更新日:<%= @issue.updated_at %>
        </p>
    </div>

    <div class="col s12">
        <div class="section">
            <h4><%= @issue.title %></h4>
            <div class="divider"></div>
            <div class="content">
                <%= @issue.content %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <p class="center">
            <%= link_to issues_path, class: %(waves-effect waves-teal btn-flat white) do %>
                <i class="material-icons left">arrow_back</i>
                一覧へ戻る
            <%- end %>
        </p>
    </div>
</div>

