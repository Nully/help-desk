<div class="row">
    <div class="col s8">
        <h2>質問の一覧</h2>
    </div>
    <div class="col s4">
        <%= link_to new_issue_path, class: %(waves-effect waves-light btn right) do %>
            <i class="small material-icons left">add</i>新規登録
        <% end %>
    </div>

    <div class="col s12">
        <table class="striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>質問事項</th>
                    <th>ステータス</th>
                    <th>回答数</th>
                </tr>
            </thead>
            <tbody>
                <%- @issues.each do |issue| %>
                    <tr>
                        <td><%= issue.id %></td>
                        <td><%= link_to issue_path(issue) do %>
                            <%= issue.title %>
                        <%- end %></td>
                        <td>aaaa</td>
                        <td>1</td>
                    </tr>
                <% end %>
            </tbody>
        </table>

        <%= paginate @issues %>
    </div>
</div>

