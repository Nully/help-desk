<div class="row">
    <div class="col s12">
        <h5>回答を書く</h5>
    </div>
    <%= simple_form_for @comment do |f| %>
        <%= f.input(:issue_id, as: :hidden, input_html: { value: issue_id }) if issue_id.present? %>
        <div class="col s3">
            <%= f.input :email, label: 'メールアドレス' %>
        </div>
        <div class="col s6">
            <%= f.input :content, label: '回答内容', input_html: { class: %(materialize-textarea) }%>
        </div>
        <div class="col s3">
            <%= f.button :button, class: %(waves-effect waves-light btn right) do %>
                <i class="material-icons left small">create</i>
                回答を登録
            <%- end %>
        </div>
    <%- end %>
</div>
